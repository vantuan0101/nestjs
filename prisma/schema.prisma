// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doccontent {
  id       Int      @id @default(autoincrement())
  data     String
  docsId   Int?
  Docs     Docs?    @relation(fields: [docsId], references: [id])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Docs {
  id         Int          @id @default(autoincrement())
  name       String
  title      String[]
  slug       String[]
  createAt   DateTime     @default(now())
  updateAt   DateTime     @updatedAt
  CodeBlock  CodeBlock[]
  Doccontent Doccontent[]
}

model CodeBlock {
  id       Int      @id @default(autoincrement())
  code     String
  DocsId   Int?
  Docs     Docs?    @relation(fields: [DocsId], references: [id])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model User {
  id       Int      @id @default(autoincrement())
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?
  bookmarks Bookmark[]

  @@map("users")
}

model Bookmark {
  id          Int      @id @default(autoincrement())
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  userId      Int
  url         String
  title       String
  description String?
  tags        String

  user User @relation(fields: [userId], references: [id])

  @@map("bookmarks")
}
